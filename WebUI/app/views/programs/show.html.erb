<div class="h1">Waypoints for <%= @program.name%></div>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <td style="width: 10em">Waypoint</td>
      <td style="width: 10em">Coordinates (m)</td>
      <td>Actions</td>
    </tr>
  </thead>
  <tbody>
    <% @program.waypoints.each do |waypoint| %>
      <tr>
        <td><%= waypoint.position+1 %></td>
        <td><%= waypoint.x %> / <%= waypoint.y %></td>
        <td><%= waypoint.actions.join(', ') %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Edit', edit_program_path(@program) %> |
<%= link_to 'Back', programs_path %>
